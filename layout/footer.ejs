<script>
  const indexEle = document.querySelector(".index");
  const darkLogo = document.querySelector(".nav-dark");
  const lightLogo = document.querySelector(".nav-light");
  if (indexEle === null) {
    lightLogo.style.display = "none";
  } else {
    darkLogo.style.display = "none";
  }
  const connectIcon = document.querySelector(".connectIcon");
  const connectIcons = document.querySelector(".connectIcons");
  connectIcon.addEventListener("click", (e) => {
    e.preventDefault();
    connectIcons.classList.toggle("d-block");
    connectIcons.classList.toggle("d-none");
  });

  const ftWaveImage = document.querySelector(".ft-wave");
  gsap.to(ftWaveImage, {
    y: -12,
    duration: 2,
    ease: "none",
    repeat: -1,
    yoyo: true,
  });
  let currentVal = 0;
  let scrollVal = 0;
  const navCtrlEle = document.querySelector(".navCtrl");
  const navBarElm = document.querySelector(".navbar-toggler");
  const navLogoElm = document.querySelector(".nav-logo");

  let navOpen = false;

  let toggleButton = document.querySelector(".navbar-toggler");

  const navBrand = document.querySelector(".nav-logo");

  navBarElm.addEventListener("click", function () {
    if (toggleButton.getAttribute("aria-expanded") === "true") {
      disableScroll();
      navBrand.classList.remove("logo-show");
      navBrand.classList.add("logo-hidden");
    } else {
      enableScroll();
      navBrand.classList.remove("logo-hidden");
      navBrand.classList.add("logo-show");
    }
  });

  function disableScroll() {
    $("body").css("overflow", "hidden");
  }
  function enableScroll() {
    $("body").css("overflow", "auto");
  }
</script>
